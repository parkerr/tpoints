extends layout

block content
  .row.page-header
    .col-lg-12
        h1 Update Card
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/card", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="points") Points
          .col-xs-12.col-sm-2
            input#points.form-control(name="points")
        button.btn.btn-default Add Points

